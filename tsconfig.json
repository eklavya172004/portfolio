{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "preserve",        // or "react-jsx" for React 17+
    "allowJs": true,          // ✔️ allows JS/JSX files
    "checkJs": true,          // ❓ only if you want type-checking in JS files
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
      "**/*.js", 
  "**/*.jsx"  
  ],
  "exclude": [
    "node_modules"
  ]
}
